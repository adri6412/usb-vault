[Unit]
Description=DHCP and DNS Server for %i
After=network.target
Wants=network.target

[Service]
Type=simple
ExecStart=/usr/sbin/dnsmasq --conf-file=/etc/dnsmasq.d/dnsmasq-%i.conf --no-daemon
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=dnsmasq-%i

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/var/lib/dhcp
ReadWritePaths=/var/log

[Install]
WantedBy=multi-user.target
